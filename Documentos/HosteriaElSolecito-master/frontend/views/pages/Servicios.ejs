{% extends '-bases.html' %}
{% load static %}
{% block tittle %}Nosotros{% endblock %}
{% block style %} {% static 'css/Servicios.css' %} {% endblock %}

{% block cuerpo %}

<div class="container my-4" enctype="multipart/form-data">
    <h2 class="mb-4">Servicios Disponibles</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {% for servicio in servicios %}
      <div class="col">
        <div class="card h-100 shadow-sm" style="width: 100%;">
            {% if servicio.foto %}
                <img src="{{ servicio.foto.url }}" class="card-img-top" alt="Imagen de servicio">
            {% else %}
                <img src="{% static 'servicios/default.png' %}" class="card-img-top" alt="Imagen por defecto de servicio">
            {% endif %}
          
          <div class="card-body">
            <h5 class="card-title">{{ servicio.nombre }}</h5>
            <h6 class="card-subtitle mb-2 text-success">$ {{ servicio.precio }}</h6>
            <p class="card-text">{{ servicio.descripcion }}</p>
  
            {% if servicio.estado == "A" %}
              <span class="badge bg-success">Activo</span>
            {% else %}
              <span class="badge bg-danger">Inactivo</span>
            {% endif %}
          </div>
  
          <div class="card-footer text-muted d-flex justify-content-between align-items-center">
            <small>De {{ servicio.hora_inicio }} a {{ servicio.hora_fin }}</small>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>

{% endblock %}