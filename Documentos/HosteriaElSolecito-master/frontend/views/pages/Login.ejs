<%- include('-bases') %>

<%- block('title') %>inicio<%- endblock %>
<%- block('style') %> <link rel="stylesheet" href="/static/css/Login.css"> <%- endblock %>
<%- block('js') %> <script src="/static/js/Login.js"></script> <%- endblock %>

<%- block('cuerpo') %>
    <form action="" method="post">
        <div class="login-container">
            <h2>Iniciar sesión</h2>
            <form class="login-form" method="post">
                <div class="input-group">
                    <label for="username">Correo</label>
                    <input value="<%= request.session.data.usuario %>" name="usuario" type="text" id="username" placeholder="Introduce tu correo" required>
                </div>
                <div class="input-group">
                    <label for="password">Contraseña</label>
                    <input name="contrasena" type="password" id="password" placeholder="Introduce tu contraseña" required>
                    <i class="show-password" id="toggle-password"></i> 
                </div>
                <button type="submit" class="btn-login">Iniciar sesión</button>
            </form>
            <br><br><br>
            <a class="bienv" href="<%= url('Recuperar_clave') %>" >Recuperar contraseña</a>
        </div>
    </form>
<%- endblock %>
